<Application x:Class="HCIDE.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HCIDE"
             Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Converters -->
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>

            <!-- Inverse Boolean Converter -->
            <local:InverseBooleanConverter x:Key="InverseBoolConverter"/>

            <!-- Dynamic Theme Resources -->
            <SolidColorBrush x:Key="EditorBackground" Color="#1E1E1E"/>
            <SolidColorBrush x:Key="EditorForeground" Color="#D4D4D4"/>
            <SolidColorBrush x:Key="LineNumberForeground" Color="#858585"/>
            <SolidColorBrush x:Key="SelectionBackground" Color="#264F78"/>
            <SolidColorBrush x:Key="CaretColor" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="KeywordColor" Color="#569CD6"/>
            <SolidColorBrush x:Key="StringColor" Color="#CE9178"/>
            <SolidColorBrush x:Key="CommentColor" Color="#6A9955"/>
            <SolidColorBrush x:Key="NumberColor" Color="#B5CEA8"/>
            <SolidColorBrush x:Key="FunctionColor" Color="#DCDCAA"/>
            <SolidColorBrush x:Key="ClassColor" Color="#4EC9B0"/>
            <SolidColorBrush x:Key="VariableColor" Color="#9CDCFE"/>
            <SolidColorBrush x:Key="OperatorColor" Color="#D4D4D4"/>
            <SolidColorBrush x:Key="PanelBackground" Color="#252526"/>
            <SolidColorBrush x:Key="BorderColor" Color="#3E3E42"/>
            <SolidColorBrush x:Key="StatusBarBackground" Color="#007ACC"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
